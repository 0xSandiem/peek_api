# Flask environment (development/production)
FLASK_ENV=development

# Flask secret key - generate with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-secret-key-here

# PostgreSQL connection URL (format: postgresql://user:password@host:port/database)
DATABASE_URL=postgresql://peek_user:peek_password@localhost:5432/peek_db

# Redis connection URL for caching and task queue
REDIS_URL=redis://localhost:6379/0

# Celery broker URL (uses Redis)
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend (uses Redis)
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Directory for uploaded files (relative to app root)
UPLOAD_FOLDER=uploads

# Maximum file upload size in bytes (default: 16MB)
MAX_FILE_SIZE=16777216

# Cloudflare R2 Storage Configuration
# Get your account ID from: https://dash.cloudflare.com/ (in URL after dash.cloudflare.com/)
R2_ACCOUNT_ID=your_cloudflare_account_id

# R2 API credentials - generate from: https://dash.cloudflare.com/[account_id]/r2/api-tokens
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# R2 bucket name (create at: https://dash.cloudflare.com/[account_id]/r2/buckets)
R2_BUCKET_NAME=peek

# R2 region (use 'auto' for automatic selection)
R2_REGION=auto

# Optional: Custom domain for public R2 URLs (leave empty to use presigned URLs)
# Example: https://images.yourdomain.com
R2_PUBLIC_DOMAIN=
