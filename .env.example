# Flask environment (development/production)
FLASK_ENV=development

# Flask secret key - generate with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-secret-key-here

# PostgreSQL connection URL (format: postgresql://user:password@host:port/database)
DATABASE_URL=postgresql://peek_user:peek_password@localhost:5432/peek_db

# Redis connection URL for caching and task queue
REDIS_URL=redis://localhost:6379/0

# Celery broker URL (uses Redis)
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend (uses Redis)
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Directory for uploaded files (relative to app root)
UPLOAD_FOLDER=uploads

# Maximum file upload size in bytes (default: 16MB)
MAX_FILE_SIZE=16777216
